<?xml version="1.0" encoding="utf-8" ?> 
<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SecureCitizen.Demo.Presentation.CustomControls.LoadingIndicatorControl"
             xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
             BackgroundColor="#63636399"
             CloseWhenBackgroundIsClicked="False"
             Title="MyPopupPage">
    <VerticalStackLayout WidthRequest="100" HeightRequest="100" VerticalOptions="CenterAndExpand" BackgroundColor="Transparent">
        <ActivityIndicator IsRunning="True" Color="{StaticResource Primary}"></ActivityIndicator>
    </VerticalStackLayout>
    
</mopups:PopupPage>