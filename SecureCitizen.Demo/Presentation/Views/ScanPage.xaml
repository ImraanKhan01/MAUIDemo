<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SecureCitizen.Demo.Presentation.Views.ScanPage"
             xmlns:controls="clr-namespace:SecureCitizen.Demo.Presentation.CustomControls" 
             Title="Scan QR Code"
             >
    <ContentPage.Content>
        <VerticalStackLayout >
           
            <controls:ScannerControl x:Name="scannerControl" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"  Results="{Binding Results}"/>
            <Label Text="{Binding QrData}"></Label>
        </VerticalStackLayout>

    </ContentPage.Content>
</ContentPage>